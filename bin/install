#!/usr/bin/env bash

install_cmake() {
  local version=$1
  local install_path=$2
  local concurrency=$3

  if [ "$TMPDIR" = "" ]; then
    local tmp_download_dir=$(mktemp -d -t asdf_vim_build_XXXXXX)
  else
    local tmp_download_dir=$TMPDIR
  fi

  # path to the tar file
  local source_path=$(get_download_file_path $version $tmp_download_dir)
  echo $source_path
  download_source_file $version $source_path

  # running this in subshell
  # we don't want to disturb current working dir
  (
    if ! type "tar" &> /dev/null; then
      echo "ERROR: tar not found"
      exit 1
    fi

    tar -xvf $source_path -C $tmp_download_dir || exit 1
    cd $tmp_download_dir/vim-${version}
    # configure with $install_path
    make
    make install
  )

}

download_source_file() {
  local version=$1
  local download_path=$2
  local download_url=$(get_download_url $version)

  curl -Lo $download_path -C - $download_url
}


get_download_file_path() {
  local version=$1
  local tmp_download_dir=$2

  echo "$tmp_download_dir/vim-${version}.tar.gz"
}

get_download_url() {
  local version=$1

  if [[ "$version" =~ ^[0-9]+\.* ]] ; then
    # if version is a release number, prepend v
    echo "https://github.com/vim/vim/archive/v${version}.tar.gz"
  else
    # otherwise it can be a branch name or commit sha
    echo "https://github.com/vim/vim/archive/${version}.tar.gz"
  fi
}

install_cmake $ASDF_INSTALL_VERSION $ASDF_INSTALL_PATH $ASDF_CONCURRENCY
